{
  "name": "stan-vscode",
  "displayName": "stan-vscode",
  "description": "Stan language support for VS Code",
  "version": "0.4.0",
  "publisher": "ivan-bocharov",
  "repository": "https://github.com/bocharov-ivan/stan-vscode",
  "icon": "img/stan_logo.png",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Formatters"
  ],
  "keywords": [
    "stan"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "stan",
        "aliases": [
          "Stan",
          "stan"
        ],
        "extensions": [
          ".stan",
          ".stanfunctions"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "stan",
        "scopeName": "source.stan",
        "path": "./syntaxes/stan.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "stan",
        "path": "./snippets/snippets.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Stan formatting",
      "properties": {
        "stan-vscode.format.lineLength": {
          "type": "number",
          "default": 78,
          "markdownDescription": "Target line length"
        }
      }
    }
  },
  "scripts": {
    "compile": "npm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "vscode:prepublish": "npm run package",
    "package": "npm run check-types && node esbuild.js --production",
    "build": "vsce package"
  },
  "dependencies": {
    "diff": "^4.0.1"
  },
  "devDependencies": {
    "@types/diff": "^5.2.1",
    "@types/vscode": "^1.76.0",
    "@vscode/vsce": "^2.27.0",
    "esbuild": "^0.21.5",
    "typescript": "^4.9.5"
  }
}
